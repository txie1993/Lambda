<div class="navbar navbar-default navbar-fixed-bottom message-bar">
  <div class="chat-container">
    <div class="chat">
      {{#each model.messages as |message|}}
        <div class="message">
          <p><span class="username">{{message.user}}:</span> {{{message.text}}}</p>
        </div>
      {{/each}}

    </div>
    <form>
      <div class="chat-input">
        <div class="col-xs-10">
          {{input class='chat-text' placeholder='Your message' value=textMessageFromInput}}
        </div>
        <div class="emote-container">
          {{#each model.emotes as |e|}}
            <div class="emote">
              <div {{action 'appendEmote' e.name}}><img src="{{e.url}}"></div>
            </div>
          {{/each}}
        </div>
        <div class="col-xs-2">
          <button type="submit" class="btn btn-primary btn-lg" {{action 'createMessage' textMessageFromInput}}>Send</button>
        </div>
      </div>
    </form>
  </div>
</div>
